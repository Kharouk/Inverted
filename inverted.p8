--inverted--
player={}
player.x=20
player.y=20
player.spr=1
player.speed=1.25

function	draw_target(x,y)
	circfill(x,y,24,8)
	circfill(x,y,16,7)
	circfill(x,y,8,8)
	circfill(x,y,4,7)
end

function make_player()
	spr(player.spr,player.x,player.y)
end

function _init()
cnt=0
end

function _update60()
	player.moving=false
	cnt+=1
	if(btn(0)) player.x-=player.speed
	if(btn(1)) player.x+=player.speed
	if(btn(2)) player.y-=player.speed
	if(btn(3)) player.y+=player.speed
end

function _draw()
	cls()
	print(cnt % 60,120,0,3)
	make_player()
end
